<% if(recipe != null){ %>
<h1>Here's the recipe!</h1>

<!-- Bootstrap Breadcrumb -->
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%- recipe.name %></li>
  </ol>
</nav>

<div class="row">
  <div class="col-12 col-md-4">
    <!-- .prettier-ignore -->
    <img src="/uploads/<%- recipe.image %>" class="img-fluid sticky-top" style="top: 20px" alt="<%- recipe.name %>" loading="lazy" />
  </div>

  <div class="col-12 col-md-8">
    <div class="row">
      <div class="col-12"><h1><%- recipe.name %></h1></div>
      <!-- TODO: add others like vegan -->
      <div class="col-12 mb-4"><i class="bi bi-tag"></i><%- recipe.category %></div>
      <div class="col-12" style="white-space: pre-line">
        <h4>Cooking Instructions</h4>
        <%- recipe.description %>
      </div>
    </div>

    <div class="row pt-4">
      <div class="col-12">
        <h4>Ingredients</h4>
        <ul class="list-group list-group-flush">
          <% recipe.ingredients.forEach(function(ingredient, index){ %>
          <li class="list-group-item">
            <% if (ingredient.startsWith("S-")) { %>
            <b><%= ingredient.substring(2) %></b>
            <% } else { %>
            <input type="checkbox" class="btn-check" id="chk<%- ingredient.id %>" autocomplete="off" />
            <!-- Maybe add index # to ingredient? separate counter variable?-->
            <label class="btn btn-outline-primary" for="chk<%- ingredient.id %>"></label>
            <%= ingredient %> <% } %>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>

    <div class="row pt-4">
      <div class="col-12">
        <h4>Steps</h4>
        <ol class="list-group list-group-flush list-group-numbered">
          <% recipe.steps.forEach(function(step, index){ %>
          <li class="list-group-item"><%= step %></li>
          <% }) %>
        </ol>
      </div>
    </div>
  </div>
</div>
<% } else { %>
<p>No item found;</p>
<% } %>
